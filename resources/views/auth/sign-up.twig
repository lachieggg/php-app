{% extends "templates/app.twig" %}

{% block content %}
<body id='sign-in-body' class='index-body'>
	<div id='login-welcome-div'>
    <br>
    <img id='welcome-img' class='carousel-img half-img' src='images/sample.png'></img>
  </div>
  <br>
  <br>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Sign up</div>
                <div class="panel-body">
                    <form class='input-form' action="{{ path_for('auth.sign-up') }}" method="post" autocomplete="off">
                        <div class="form-group{{ errors.email ? ' has-error' : '' }}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old_input.email }}">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.name ? ' has-error' : '' }}">
                            <label for="first_name">Name</label>
                            <input type="text" name="name" id="name" placeholder="John Appleseed" class="form-control" value="{{ old_input.name }}">
                            {% if errors.name %}
                                <span class="help-block">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>
                        <div class="form-group{{ errors.password ? ' has-error' : '' }}">
                            <label for="password">Confirm password</label>
                            <input type="password" name="confirmation" id="confirmation" class="form-control">
                            {% if errors.confirmation %}
                                <span class="help-block">{{ errors.confirmation | first }}</span>
                            {% endif %}
                        </div>
                        <button type="submit" class="btn btn-default">Sign up</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
{% endblock %}
